@model Wypozyczalnia.Models.ViewModels.AuthorViewModel

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label  class="control-label">Author's Name</label>
                <input asp-for="Name" class="input-author-name form-control" id="name"/>
            </div>
            <div class="form-group">
                <label class="control-label">Author's Last Name</label>
                <input asp-for="LastName" class="form-control" id="last-name"/>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Create" />
            </div>
        </form>
    </div>
</div>
