
@model BookViewModel


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="control-label">Book's Name</label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Pages</label>
                <input asp-for="Pages" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Authors</label>
                <div>
                    @foreach (var author in Model.AvailableAuthors)
                    {
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="SelectedAuthors" value="@author.Value"
                            checked ="@(Model.SelectedAuthors.Contains(int.Parse(author.Value)) ? "checked" : "")" />
                            <label class="form-check-label">@author.Text</label>
                        </div>
                    }
                </div>
                </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Create" />
            </div>
 
        </form>
    </div>
</div>