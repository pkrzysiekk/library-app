@{
    ViewData["Title"] = "Home Page";
}




<div class="container mt-5">
    <div class="card shadow border-left-primary">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                        Welcome
                    </div>
                    <h1 class="h3 mb-3 text-gray-800">Welcome to our Library Page!</h1>
                    @if (!User!.Identity!.IsAuthenticated)
                    {
                        <p class="mb-4">

                            You need to <strong>log in</strong> to access full functionality.
                            However, you can still <strong>browse our book collection</strong> even without admin access.
                        </p>
                    }
                    else{
                        <p class="mb-4">

                            Hello, <strong>@User.Identity.Name</strong> please look at our book collection!
                        </p>
                    }
                    <a href="/Book" class="btn btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-book"></i>
                        </span>
                        <span class="text">Browse Books</span>
                    </a>
                </div>
                <div class="col-auto d-none d-md-block">
                    <i class="fas fa-university fa-4x text-gray-300"></i>
                </div>
            </div>
        </div>
    </div>
</div>
